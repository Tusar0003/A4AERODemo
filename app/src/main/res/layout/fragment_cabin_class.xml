<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.CabinClassFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingStart="@dimen/_16sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/image_view_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_keyboard_arrow_left_white_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_16sdp"
                android:textColor="@android:color/white"
                android:text="Travellers and Cabin Class" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_app_bar"
            android:layout_above="@id/button_done">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp"
                    android:text="Passengers" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_1sdp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/_2sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/colorPrimary"
                                    android:text="Adults" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@android:color/black"
                                    android:text="12+ years" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center|end"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/image_view_adults_minus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_remove_circle_outline_green_24dp" />

                                <TextView
                                    android:id="@+id/text_view_adults"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@android:color/black"
                                    android:text="0" />

                                <ImageView
                                    android:id="@+id/image_view_adults_plus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_add_circle_outline_green_24dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/colorPrimary"
                                    android:text="Children" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@android:color/black"
                                    android:text="2-11 years" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center|end"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/image_view_children_minus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_remove_circle_outline_green_24dp" />

                                <TextView
                                    android:id="@+id/text_view_children"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@android:color/black"
                                    android:text="0" />

                                <ImageView
                                    android:id="@+id/image_view_children_plus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_add_circle_outline_green_24dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/colorPrimary"
                                    android:text="Infant" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@android:color/black"
                                    android:text="Age under 2 years" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center|end"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/image_view_infant_minus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_remove_circle_outline_green_24dp" />

                                <TextView
                                    android:id="@+id/text_view_infant"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@android:color/black"
                                    android:text="0" />

                                <ImageView
                                    android:id="@+id/image_view_infant_plus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_add_circle_outline_green_24dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp"
                    android:text="Cabin Class" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_1sdp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/_2sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radio_group_cabin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio_button_economy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:button="@drawable/radio_button_background"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="@dimen/_15sdp"
                                android:text="Economy" />

                            <RadioButton
                                android:id="@+id/radio_button_business"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:button="@drawable/radio_button_background"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="@dimen/_15sdp"
                                android:text="Business" />

                            <RadioButton
                                android:id="@+id/radio_button_any_cabin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:button="@drawable/radio_button_background"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="@dimen/_15sdp"
                                android:text="Any Cabin" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/red"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp"
            android:text="Done" />
    </RelativeLayout>

</layout>